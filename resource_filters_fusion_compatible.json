{
  "style": {
    "backgroundColor": "#000000",
    "textColor": "#FFFFFF"
  },
  "filterGroups": [
    {
      "name": "Resolution",
      "filters": [
        {
          "name": "4K",
          "pattern": "(?i)\\b(2160p|4k)\\b"
        },
        {
          "name": "1440p",
          "pattern": "(?i)\\b1440p\\b"
        },
        {
          "name": "1080p",
          "pattern": "(?i)\\b1080p\\b"
        },
        {
          "name": "720p",
          "pattern": "(?i)\\b720p\\b"
        }
      ]
    },
    {
      "name": "Media Source",
      "filters": [
        {
          "name": "Remux",
          "pattern": "(?i)remux"
        },
        {
          "name": "BluRay",
          "pattern": "(?i)blu[- ]?ray|bdrip"
        },
        {
          "name": "WEB-DL",
          "pattern": "(?i)web[- ]?dl|webrip"
        }
      ]
    },
    {
      "name": "Dynamic Range",
      "filters": [
        {
          "name": "Dolby Vision",
          "pattern": "(?i)dolby[ -]?vision|\\bdv\\b"
        },
        {
          "name": "HDR10+",
          "pattern": "(?i)hdr10\\+"
        },
        {
          "name": "HDR10",
          "pattern": "(?i)hdr10"
        },
        {
          "name": "HDR",
          "pattern": "(?i)\\bhdr\\b"
        },
        {
          "name": "SDR",
          "pattern": "(?i)\\bsdr\\b"
        }
      ]
    },
    {
      "name": "Audio",
      "filters": [
        {
          "name": "Dolby TrueHD",
          "pattern": "(?i)dolby[ -]?truehd"
        },
        {
          "name": "DTS-HD MA",
          "pattern": "(?i)dts[- ]?hd[ -]?ma"
        },
        {
          "name": "DTS",
          "pattern": "(?i)\\bdts\\b"
        },
        {
          "name": "Dolby Digital",
          "pattern": "(?i)dolby[ -]?digital|ac[- ]?3"
        },
        {
          "name": "FLAC",
          "pattern": "(?i)\\bflac\\b"
        },
        {
          "name": "AAC",
          "pattern": "(?i)\\baac\\b"
        }
      ]
    },
    {
      "name": "Audio Channels",
      "filters": [
        {
          "name": "Atmos",
          "pattern": "(?i)atmos"
        },
        {
          "name": "7.1",
          "pattern": "(?i)7[\\.|,]?1"
        },
        {
          "name": "5.1",
          "pattern": "(?i)5[\\.|,]?1"
        },
        {
          "name": "2.0",
          "pattern": "(?i)2[\\.|,]?0"
        }
      ]
    },
    {
      "name": "Stream Languages",
      "filters": [
        {
          "name": "English",
          "pattern": "(?i)\\beng(lish)?\\b"
        },
        {
          "name": "Japanese",
          "pattern": "(?i)\\bjap(anese)?\\b"
        },
        {
          "name": "French",
          "pattern": "(?i)\\bfre(nch)?\\b"
        },
        {
          "name": "German",
          "pattern": "(?i)\\bger(man)?\\b"
        },
        {
          "name": "Spanish",
          "pattern": "(?i)\\bspa(nish)?\\b"
        },
        {
          "name": "Hindi",
          "pattern": "(?i)\\bhin(di)?\\b"
        }
      ]
    }
  ]
}